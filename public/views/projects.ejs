<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Projects | Assignment Project</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 p-6">
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>
  <header class="mb-6 text-center">
    <h1 class="text-4xl font-extrabold mb-4">All Projects</h1>
  </header>

  <!-- Section: Sectors (if you want a filter menu or sector info) -->
  <section class="max-w-3xl mx-auto mb-8">
    <h2 class="text-2xl font-bold mb-4">Sectors</h2>
    <ul class="grid grid-cols-2 gap-2 text-left list-disc list-inside">
      <% sectors.forEach(sector => { %>
        <li>
          <%= sector.name || sector.title || JSON.stringify(sector) %>
        </li>
      <% }) %>
    </ul>
  </section>

  <!-- Section: Projects Table -->
  <section class="max-w-5xl mx-auto mt-8">
    <h2 class="text-2xl font-bold mb-4">Project List</h2>
    <% if (projects && projects.length > 0) { %>
      <table class="min-w-full border border-gray-300 bg-white">
        <thead class="bg-indigo-600 text-white">
          <tr>
            <% Object.keys(projects[0]).forEach(key => { %>
              <th class="border border-gray-300 px-2 py-2"><%= key %></th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <% Object.values(project).forEach(value => { %>
                <td class="border border-gray-300 px-2 py-2"><%= typeof value === "object" ? JSON.stringify(value) : value %></td>
              <% }) %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No projects available.</p>
    <% } %>
  </section>
</body>
</html>
